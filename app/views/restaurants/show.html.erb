<h1 class="text-center"><%= @restaurant.name %></h1>

<h3 class="text-center">Data</h3>
<p><strong>Category: </strong><%= @restaurant.category %></p>
<p><strong>Address: </strong><%= @restaurant.address %></p>
<p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>

<h2 class="text-center">Reviews</h2>
<ul>

  <% unless @restaurant.reviews.empty? %>
  <li>
  <% @restaurant.reviews.each do |review| %>
    <%= review.content %> (<%= review.rating %> stars)
  <% end %>
  </li>
  <% else %>
    <p>No reviews at the moment...</p>
  <% end %>
</ul>



<%# Form: Leave a review %>
<h2 class="text-center">Leave a review</h2>
<div class="my-4">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>

  <% end %>

</div>

<div class="mt-4">
  <%= link_to '< Back', restaurants_path %>
</div>
